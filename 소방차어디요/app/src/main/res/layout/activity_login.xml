<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="grocket.com.smart119citizen.LoginActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/bt_main" />

    <RelativeLayout
        android:layout_below="@id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imgJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/txt_mebership_regist"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/edtID"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:hint="@string/login_hint_ID"
            android:textColorHint="@color/hint_text_color"
            android:background="@drawable/inputbox_id"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:maxLength="255"
            android:nextFocusDown="@+id/edtPassword"
            android:selectAllOnFocus="false"
            android:layout_below="@id/imgJoin"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:hint="@string/login_hint_Password"
            android:textColorHint="@color/hint_text_color"
            android:background="@drawable/inputbox_pw"
            android:gravity="center"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:maxLength="255"
            android:selectAllOnFocus="false"
            android:layout_below="@id/edtID"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_login"
            android:layout_below="@id/edtPassword"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</RelativeLayout>
